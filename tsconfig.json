{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "rootDir": "src",
    "importHelpers": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__", "**/__mocks__"]
}
